		{
			"name": "Compare",
			"item": [
				{
					"name": "POST /compare - 3 items",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Status code is 200\", function () {",
									"    pm.response.to.have.status(200);",
									"});",
									"",
									"pm.test(\"Response has required fields\", function () {",
									"    var jsonData = pm.response.json();",
									"    pm.expect(jsonData).to.have.property('items');",
									"    pm.expect(jsonData).to.have.property('storeTotals');",
									"    pm.expect(jsonData).to.have.property('overallTotal');",
									"    pm.expect(jsonData).to.have.property('unmatched');",
									"});",
									"",
									"pm.test(\"Items array has correct structure\", function () {",
									"    var jsonData = pm.response.json();",
									"    pm.expect(jsonData.items).to.be.an('array');",
									"    ",
									"    if (jsonData.items.length > 0) {",
									"        var item = jsonData.items[0];",
									"        pm.expect(item).to.have.property('name');",
									"        pm.expect(item).to.have.property('store');",
									"        pm.expect(item).to.have.property('price');",
									"        pm.expect(item.price).to.be.a('number');",
									"        pm.expect(item.price).to.be.above(0);",
									"    }",
									"});",
									"",
									"pm.test(\"StoreTotals array has correct structure\", function () {",
									"    var jsonData = pm.response.json();",
									"    pm.expect(jsonData.storeTotals).to.be.an('array');",
									"    ",
									"    if (jsonData.storeTotals.length > 0) {",
									"        var storeTotal = jsonData.storeTotals[0];",
									"        pm.expect(storeTotal).to.have.property('store');",
									"        pm.expect(storeTotal).to.have.property('total');",
									"        pm.expect(storeTotal.total).to.be.a('number');",
									"        pm.expect(storeTotal.total).to.be.at.least(0);",
									"    }",
									"});",
									"",
									"pm.test(\"OverallTotal is a number\", function () {",
									"    var jsonData = pm.response.json();",
									"    pm.expect(jsonData.overallTotal).to.be.a('number');",
									"    pm.expect(jsonData.overallTotal).to.be.at.least(0);",
									"});",
									"",
									"pm.test(\"Unmatched is an array\", function () {",
									"    var jsonData = pm.response.json();",
									"    pm.expect(jsonData.unmatched).to.be.an('array');",
									"});",
									"",
									"pm.test(\"Returns correct mapping for 3 items\", function () {",
									"    var jsonData = pm.response.json();",
									"    var requestBody = JSON.parse(pm.request.body.raw);",
									"    ",
									"    // Check that we have items in response (may be less if some unmatched)",
									"    pm.expect(jsonData.items.length).to.be.at.most(requestBody.items.length);",
									"    ",
									"    // Verify each item has a store and price",
									"    jsonData.items.forEach(function(item) {",
									"        pm.expect(item.store).to.be.a('string');",
									"        pm.expect(item.price).to.be.a('number');",
									"    });",
									"});",
									"",
									"pm.test(\"Store totals match requested stores\", function () {",
									"    var jsonData = pm.response.json();",
									"    var requestBody = JSON.parse(pm.request.body.raw);",
									"    ",
									"    // Get store names from storeTotals",
									"    var storeNames = jsonData.storeTotals.map(function(st) { return st.store; });",
									"    ",
									"    // Each store total should correspond to a requested store",
									"    storeNames.forEach(function(storeName) {",
									"        // Store name should be in requested stores (case-insensitive)",
									"        var found = requestBody.stores.some(function(reqStore) {",
									"            return reqStore.toLowerCase() === storeName.toLowerCase();",
									"        });",
									"        pm.expect(found, 'Store ' + storeName + ' should be in requested stores').to.be.true;",
									"    });",
									"});",
									"",
									"pm.test(\"Totals are calculated correctly\", function () {",
									"    var jsonData = pm.response.json();",
									"    ",
									"    // Calculate expected totals per store",
									"    var calculatedTotals = {};",
									"    jsonData.items.forEach(function(item) {",
									"        if (!calculatedTotals[item.store]) {",
									"            calculatedTotals[item.store] = 0;",
									"        }",
									"        calculatedTotals[item.store] += item.price;",
									"    });",
									"    ",
									"    // Verify store totals match calculated values (with small tolerance for floating point)",
									"    jsonData.storeTotals.forEach(function(storeTotal) {",
									"        var calculated = calculatedTotals[storeTotal.store] || 0;",
									"        pm.expect(storeTotal.total).to.be.closeTo(calculated, 0.01);",
									"    });",
									"});"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"items\": [\"Milk\", \"Bread\", \"Eggs\"],\n    \"stores\": [\"Walmart\", \"Target\", \"Kroger\"]\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{base_url}}/api/v1/compare",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"v1",
								"compare"
							]
						},
						"description": "Compare 3 items across stores - returns correct mapping & totals"
					},
