    {
      "name": "Price Comparison",
      "item": [
        {
          "name": "Compare - Simple List",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status code is 200\", function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test(\"Response has recommendations\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.have.property('recommendations');",
                  "    pm.expect(jsonData.recommendations).to.be.an('array');",
                  "});",
                  "",
                  "pm.test(\"Response has totals\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.have.property('total_cost');",
                  "    pm.expect(jsonData).to.have.property('savings');",
                  "    pm.expect(jsonData).to.have.property('store_totals');",
                  "});",
                  "",
                  "pm.test(\"Recommendations have required fields\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    jsonData.recommendations.forEach(function(rec) {",
                  "        pm.expect(rec).to.have.property('product');",
                  "        pm.expect(rec).to.have.property('cheapest_store');",
                  "        pm.expect(rec).to.have.property('price');",
                  "        pm.expect(rec).to.have.property('all_prices');",
                  "    });",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
